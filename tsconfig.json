{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "src",
        "lib": [ "DOM", "ES2019" ], // for flat()
        "esModuleInterop": true, // required by resolveJsonModule
        // "module": "es2015",
        // "moduleResolution": "node",
        "experimentalDecorators": true, // required by testdeck
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "outDir": "dist",
        "preserveConstEnums": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}
