        </div>
      </div>
      <div class="green"></div>
    </div>

    <div class="content">
      <header>
        <div class="logos">
          <img src="/images/logo-RMHCBG.png" />
          <img src="/images/logo-GG-stacked.png" />
          <img src="/images/logo-GWYF.png" />
        </div>
        <h1>Invitational</h1>
      </header>

      <div class="score-card-container">
        <div id="score-card-background"></div>
        <iframe id="GoogleScoreCard"></iframe>
      </div>

      <div class="round-selector">
        <div data-selection="1"><p>Round 1</p></div>
        <div data-selection="2"><p>Round 2</p></div>
        <div data-selection="0"><p>Final</p></div>
      </div>

      <div id="windmill">
        <div class="tip"></div>
        <div class="frame"></div>
        <div class="spinner">
          <div class="blade blade1">
            <div></div>
          </div>
          <div class="blade blade2">
            <div></div>
          </div>
          <div class="blade blade3">
            <div></div>
          </div>
          <div class="blade blade4">
            <div></div>
          </div>
        </div>
        <div class="circle">
          <div class="circle inner"></div>
        </div>
        <div class="base"></div>
      </div>

      <!-- close .content -->
    </div>

    <script>
        import "./golf";
    </script>
