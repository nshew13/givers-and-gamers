{% set subtitle = 'Schedule' %}
{% extends 'main.njk' %}

{% block headImports %}
    {% include "fontawesome.njk" %}
    <link rel="stylesheet" href="./schedule.scss" />
{% endblock %}

{% block content %}
    <main>
      <h1>
        Event Schedule<br />
        <span id="countdown" style="font-size: smaller"></span>
      </h1>

      <section class="schedule">
        <div class="day vertext">All Weekend</div>
        <div class="events">
          <article id="202202181830" class="event">
            <div class="when">&nbsp;</div>
            <div class="what">
              <p class="title">Yahtzee Leaderboard</p>
              <p class="desc">
                Our Yahtzee contest runs all weekend. See if you can make the
                highest score.
              </p>
              <p class="howto">
                To be eligible for a prize, players must register with Givers
                &amp; Gamers. Details are available on
                <a href="/src/leaderboard/index.html">our leaderboard page</a>.
              </p>
            </div>
          </article>

          <article id="202202181831" class="event">
            <div class="when">&nbsp;</div>
            <div class="what">
              <p class="title">PlayStation 5 raffle</p>
              <p class="howto">
                Purchase a chance to win a PlayStation 5 console.
                Visit <a href="rmhcbluegrass.org/rmhcps5">rmhcbluegrass.org/rmhcps5</a>
                to enter.
              </p>
            </div>
          </article>
        </div>
      </section>

      <section class="schedule">
        <div class="day vertext">Day 1</div>
        <div class="events">
          <article id="202202181832" class="event">
            <div class="when">
              <p>6:30pm</p>
            </div>
            <div class="what">
              <p class="title">RMHC Staff Trivia</p>
              <p class="desc">
                Find out which RMHC Staffer knows the most about the House and its mission.
              </p>
            </div>
            <div class="watch">
              <a href="https://bit.ly/twitchrmhc">
                <img alt="link to Twitch" title="KFD on Twitch" src="/images/logo-Twitch-250.png" />
              </a>
            </div>
          </article>

          <article id="202202182030" class="event highlight1">
            <div class="when">
              <p>8:30pm</p>
              <p class="footnote">
                <img alt="Roll20" title="requires Roll20 account" src="/images/logo-Roll20-square-150.png" />
                <i class="fa-solid fa-user-plus fa-sm"></i>
              </p>
            </div>
            <div class="what">
              <p class="title">Dungeons & Dragons: Arena of Generosity</p>
              <p class="desc">
                Adventurers must use their weapons, wizardry and wits to
                survive this gladitorial spectacle. Viewers will be called upon
                to help tip the odds in the adventurers' favor.
              </p>
              <p class="howto">
                Top fundraisers are eligible to play. Contact donald@kyfrieddice.com if interested.
                Visit <a href="Roll20">Roll20</a> to create an account,
                and return at game time to play. Game is limited to 5 players.
              </p>
            </div>
            <div class="watch">
              <a href="https://bit.ly/twitchrmhc">
                <img alt="link to Twitch" title="KFD on Twitch" src="/images/logo-Twitch-250.png" />
              </a>
            </div>
          </article>
        </div>
      </section>

      <section class="schedule">
        <div class="day vertext">Day 2</div>
        <div class="events">
          <article id="202202191100" class="event">
            <div class="when">
              <p>11am</p>
              <p class="footnote">
                <img alt="Board Game Arena" title="requires BGA account" src="/images/logo-BGA-square.png" />
              </p>
            </div>
            <div class="what">
              <p class="title">Learn to Play: Yahtzee</p>
              <p class="howto">
                Join an experienced player
                <a href="https://bit.ly/zoomrmhc1">on a Zoom call</a>, where
                you'll learn or refresh the rules while playing a non-competitive game.
                Scores from this game <em>are</em> eligible for our 
                <a href="/src/leaderboard/index.html">Yahtzee leaderboard</a>.
              </p>
            </div>
          </article>


          <article id="202202191300" class="event highlight1">
            <div class="when">
              <p>1pm</p>
            </div>
            <div class="what">
              <p class="title">
                Dungeons & Dragons: &sstarf;&bigstar;<em>Celebrity Edition</em>&bigstar;&sstarf;
              </p>
              <p class="desc">
                Activate your donor network to help our celebrity players serve those in need.
              </p>
            </div>
            <div class="watch">
              <a href="https://bit.ly/twitchrmhc">
                <img alt="link to Twitch" title="KFD on Twitch" src="/images/logo-Twitch-250.png" />
              </a>
            </div>
          </article>

          <article id="202202191700" class="event">
            <div class="when">
              <p>5pm</p>
            </div>
            <div class="what">
              <p class="title">Golf With Your Friends Invitational</p>
              <p class="desc">
                Watch our streamer guests do their best on some increasingly
                difficult miniature golf holes.
              </p>
            </div>
            <div class="watch">
              <a href="https://bit.ly/twitchrmhc">
                <img alt="link to Twitch" title="KFD on Twitch" src="/images/logo-Twitch-250.png" />
              </a>
            </div>
          </article>

          <article id="202202192000" class="event">
            <div class="when">
              <p>8pm</p>
              <p class="footnote">
                <i class="fa-solid fa-mobile-alt fa-sm"></i>
                <i class="fa-solid fa-user-plus fa-sm"></i>
              </p>
            </div>
            <div class="what">
              <p class="title">Split the Pot Countdown Trivia</p>
              <p class="desc">
                A single elimination, last contestant standing trivia showdown.
              </p>
              <p class="howto">
                Register at <a href="rmhcbluegrass.org/trivia">rmhcbluegrass.org/trivia</a>.
              </p>
            </div>
            <div class="watch">
              <a href="https://bit.ly/twitchrmhc">
                <img alt="link to Twitch" title="KFD on Twitch" src="/images/logo-Twitch-250.png" />
              </a>
            </div>
          </article>

          <article id="202202192030" class="event">
            <div class="when"></div>
            <div class="what">
              <p class="title">Codenames</p>
              <p class="desc">
                Spymasters must help their team discover the right cards using single-word clues.
                (Game begins after trivia concludes.)
              </p>
              <p class="howto">
                Play online at <a href="https://codenames.game/">codenames.game</a>
                with the "room code" shown on the Twitch stream.
              </p>
            </div>
            <div class="watch">
              <a href="https://bit.ly/twitchrmhc">
                <img alt="link to Twitch" title="KFD on Twitch" src="/images/logo-Twitch-250.png" />
              </a>
            </div>
          </article>
        </div>
      </section>

      <section class="schedule">
        <div class="day vertext">Day 3</div>
        <div class="events">
         
          <article id="202202201300" class="event">
            <div class="when">
              <p>1pm</p>
              <p class="footnote">
                <i class="fa-solid fa-mobile-alt fa-sm"></i>
              </p>
            </div>
            <div class="what">
              <p class="title">Family-friendly Jackbox</p>
              <p class="howto">
                Visit <a href="https://jackbox.tv">jackbox.tv</a>, and enter the
                "room code" shown on the Twitch stream.
              </p>
            </div>
            <div class="watch">
              <a href="https://bit.ly/twitchrmhc">
                <img alt="link to Twitch" title="KFD on Twitch" src="/images/logo-Twitch-250.png" />
              </a>
            </div>
          </article>

          <article id="202202201530" class="event">
            <div class="when">
              <p>3:30pm</p>
              <p class="footnote">
                <i class="fa-solid fa-user-plus fa-sm"></i>
              </p>
            </div>
            <div class="what">
              <p class="title">Fall Guys</p>
              <p class="desc">
                Hordes of contestants make a wild dash through round after round of escalating chaos until one victor remains.
              </p>
              <p class="howto">
                Fall Guys: Ultimate Knockout is available as a one-time purchase (currently $20) for computer
                <a href="https://store.steampowered.com/app/1097150/Fall_Guys_Ultimate_Knockout/">via Steam</a>
                or through the <a href="https://www.playstation.com/en-us/games/fall-guys-ultimate-knockout/">PlayStation Store</a>
                for PS4 and PS5. (Speaking of PS5, have you heard about our <a href="rmhcbluegrass.org/rmhcps5">raffle</a>?)
              </p>
            </div>
            <div class="watch">
              <a href="https://bit.ly/twitchrmhc">
                <img alt="link to Twitch" title="KFD on Twitch" src="/images/logo-Twitch-250.png" />
              </a>
            </div>
          </article>

          <article id="202202201700" class="event highlight1">
            <div class="when">
              <p>5pm</p>
            </div>
            <div class="what">
              <p class="title">Closing Ceremony, Raffle Drawing &amp; Awards</p>
              <p class="desc">
                We'll recognize our fundraising stars and
                prize winners while celebrating our fundraising total.
              </p>
            </div>
            <div class="watch">
              <a href="https://bit.ly/twitchrmhc">
                <img alt="link to Twitch" title="KFD on Twitch" src="/images/logo-Twitch-250.png" />
              </a>
            </div>
          </article>
        </div>
      </section>
    </main>

    <footer class="legend">
      <div>
        <h4>Legend</h4>
        <p>You will need the following, as indicated.</p>
      </div>
      <div class="footnote icons">
        <div>
          <a href="https://boardgamearena.com"
            ><img
              alt="Board Game Arena"
              src="/images/logo-BGA-square.png" /></a
          >&nbsp;
          <a href="https://boardgamearena.com">Board Game Arena account</a>
        </div>
        <div>
          <a href="https://app.roll20.net"
            ><img
              alt="Roll20"
              src="/images/logo-Roll20-square-150.png" /></a
          >&nbsp;
          <a href="https://app.roll20.net">Roll20 account</a>
        </div>
        <div>
          <span class="logo"><i class="fa-solid fa-mobile-alt"></i></span>
          <span>a touchscreen device<br />(per player)</span>
        </div>
        <div>
          <span class="logo"><i class="fa-solid fa-user-plus"></i></span>
          <span>advance registration</span>
        </div>
        <div>
          <a href="https://bit.ly/twitchrmhc">
            <img
              alt="link to Twitch"
              title="KFD on Twitch"
              src="/images/logo-Twitch-250.png"
            />
          </a>
          <a href="https://bit.ly/twitchrmhc">watch on Twitch </a>
        </div>
      </div>
    </footer>

    <script type="module" src="./schedule.js"></script>
{% endblock %}
